<Table id="table2" selectionMode="MultiToggle" rows="{/ProductCollection}" visibleRowCount="7" sort="sortDeliveryDate" ariaLabelledBy="title">
	<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title id="title" text="Products"/>
						<m:ToolbarSpacer/>
						<m:Button
							icon="sap-icon://sorting-ranking"
							tooltip="Sort ascending across Categories and Name"
							press="sortCategoriesAndName"/>
						<m:Button
							icon="sap-icon://sort"
							tooltip="Sort Categories in addition to current sorting"
							press="sortCategories"/>
						<m:Button
							icon="sap-icon://decline"
							tooltip="Clear all sortings"
							press="clearAllSortings"/>
					</m:OverflowToolbar>
				</extension>

        <columns>
            <Column id="name5" width="11rem" sortProperty="Name">
                <m:Label text="Product Name" />

                <m:Text text="Tüketim Noktası" wrapping="false" />
            </Column>
            <Column id="name6" width="11rem" sortProperty="Name">
                <m:Label text="Product Name" />

                <m:Text text="Oda" wrapping="false" />
            </Column>
            <Column id="name7" width="11rem" sortProperty="Name">
                <m:Label text="Product Name" />

                <m:Text text="Muhattap Adı Soyadı" wrapping="false" />
            </Column>
        </columns>
    </Table>